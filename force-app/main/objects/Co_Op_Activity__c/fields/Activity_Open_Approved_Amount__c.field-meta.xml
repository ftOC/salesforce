<?xml version="1.0" encoding="UTF-8"?>
<CustomField xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Activity_Open_Approved_Amount__c</fullName>
    <externalId>false</externalId>
    <formula>If(
OR(ISPICKVAL(Activity_Status__c, &apos;Claimed&apos;),
ISPICKVAL(Activity_Status__c, &apos;Claimable&apos;),
ISPICKVAL(Activity_Status__c, &apos;Approved&apos;)
),
(Claims_Paid_Amount__c + Activity_Awaiting_reimbursement_Amount__c),
0)</formula>
    <formulaTreatBlanksAs>BlankAsZero</formulaTreatBlanksAs>
    <label>Activity Open Approved Amount</label>
    <precision>18</precision>
    <required>false</required>
    <scale>2</scale>
    <trackHistory>false</trackHistory>
    <trackTrending>false</trackTrending>
    <type>Currency</type>
</CustomField>

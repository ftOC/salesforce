<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>RestrictMasterOpptyForSimpleDeal</fullName>
    <active>true</active>
    <description>Req. 5127 : Restrict the option to select &quot;Master&quot; as &quot;Opportunity Relation&quot; for simple deals.</description>
    <errorConditionFormula>AND( 
$Profile.Name&lt;&gt;$Label.Data_Loader_Profile_Name,
ISPICKVAL(Opportunity_Relation__c,&apos;Master&apos;),
 Deal__r.RecordType.DeveloperName = &apos;Simple_Deal&apos;
)</errorConditionFormula>
    <errorDisplayField>Opportunity_Relation__c</errorDisplayField>
    <errorMessage>Simple deals cannot have master opportunities.</errorMessage>
</ValidationRule>

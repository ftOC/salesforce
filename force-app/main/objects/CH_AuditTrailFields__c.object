<?xml version="1.0" encoding="UTF-8"?>
<CustomObject xmlns="http://soap.sforce.com/2006/04/metadata">
    <customSettingsType>List</customSettingsType>
    <description>Fields that need to be tracked in the Audit Trail custom object are stored in this Custom Setting table. This US is related to US: 5585 (R1) and US: 15569 (R2).</description>
    <enableFeeds>false</enableFeeds>
    <fields>
        <fullName>Field_API_Name__c</fullName>
        <encryptionScheme>None</encryptionScheme>
        <externalId>false</externalId>
        <inlineHelpText>Enter the API Name of the field to be tracked.</inlineHelpText>
        <label>Field API Name</label>
        <length>255</length>
        <required>true</required>
        <trackTrending>false</trackTrending>
        <type>Text</type>
        <unique>false</unique>
    </fields>
    <fields>
        <fullName>Field_Tracking_Active__c</fullName>
        <defaultValue>false</defaultValue>
        <externalId>false</externalId>
        <inlineHelpText>Please check box if the field has to be tracked.</inlineHelpText>
        <label>Field Tracking Active?</label>
        <trackTrending>false</trackTrending>
        <type>Checkbox</type>
    </fields>
    <fields>
        <fullName>Store_as_Date_Time__c</fullName>
        <defaultValue>false</defaultValue>
        <description>Store the changed value in the date time tracking field</description>
        <externalId>false</externalId>
        <inlineHelpText>Store the changed value in the date time tracking field</inlineHelpText>
        <label>Store as Date Time</label>
        <trackTrending>false</trackTrending>
        <type>Checkbox</type>
    </fields>
    <fields>
        <fullName>Store_as_Long_Text__c</fullName>
        <defaultValue>false</defaultValue>
        <description>Check when tracking a very long text field, such as an email or long description, text areas etc.</description>
        <externalId>false</externalId>
        <inlineHelpText>Check when tracking a very long text field, such as an email or long description, text areas etc.</inlineHelpText>
        <label>Store as Long Text</label>
        <trackTrending>false</trackTrending>
        <type>Checkbox</type>
    </fields>
    <label>CH Audit Trail Fields</label>
    <listViews>
        <fullName>All_Values</fullName>
        <columns>NAME</columns>
        <columns>Field_API_Name__c</columns>
        <columns>Store_as_Date_Time__c</columns>
        <columns>Store_as_Long_Text__c</columns>
        <columns>Field_Tracking_Active__c</columns>
        <filterScope>Everything</filterScope>
        <label>All Values</label>
        <language>en_US</language>
    </listViews>
    <visibility>Public</visibility>
</CustomObject>

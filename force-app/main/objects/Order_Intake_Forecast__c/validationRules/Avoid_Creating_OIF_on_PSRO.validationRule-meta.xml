<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Avoid_Creating_OIF_on_PSRO</fullName>
    <active>true</active>
    <description>Avoid_Creating_OIF_on_PSRO (SF ticket :: 8510, 25/12/2017)</description>
    <errorConditionFormula>AND( 
ISNEW(), 
$Profile.Name &lt;&gt; $Label.Data_Loader_Profile_Name , 
OR( 
Opportunity__r.RecordType.DeveloperName = &apos;Pre_Sales_Risk_Opportunity&apos; , 
Opportunity__r.RecordType.DeveloperName =&apos;Pre_Sales_Risk_Opportunity_read_only&apos; 
) 

)</errorConditionFormula>
    <errorMessage>Can&apos;t Create the OIF on Pre-sales Opportunity.</errorMessage>
</ValidationRule>

<?xml version="1.0" encoding="UTF-8"?>
<CustomField xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Modified_by_Owner__c</fullName>
    <description>That is checked, if changes to OIF line were made by Opportunity Owner, Sys Admin, Global Process Admin, SDC, Interface, Data Loader (Req::779)</description>
    <externalId>false</externalId>
    <formula>if(
(OR(
 (LastModifiedById= Opportunity__r.OwnerId),
  (LastModifiedBy.Profile.Name  =  $Label.Data_Loader_Profile_Name),
  ( LastModifiedBy.Profile.Name  = $Label.System_Admin_Profile ),
  (LastModifiedBy.Profile.Name  = $Label.Integration_Profile ),
  (LastModifiedBy.Profile.Name  = $Label.SDC_Profile_Name ),
  (LastModifiedBy.Profile.Name  = $Label.Global_Process_Admin_Profile_Name)
  )
), 


True,
False


)</formula>
    <label>Modified by Owner</label>
    <trackHistory>false</trackHistory>
    <type>Checkbox</type>
</CustomField>

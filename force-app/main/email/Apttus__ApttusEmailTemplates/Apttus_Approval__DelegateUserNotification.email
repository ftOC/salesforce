<messaging:emailTemplate subject="New delegate approver(s) has been assigned for {!relatedTo.Apttus_Approval__Current_User__r.Name}" 
                         recipientType="User" 
                         relatedToType="Apttus_Approval__Backup_Approver__c"
                        language="{!recipient.LanguageLocaleKey}">

                             
    <messaging:htmlEmailBody >
        <html>
        <style type="text/css">

            table {
                border-collapse: collapse;
                width: 100%;
            }
            
            th, td {
                text-align: left;
                padding: 8px;
            }
            
            
            th {
                background-color: #f2f2f2;
                color: black;
            }
            
            table, td, th {    
                 border: 1px solid #ddd;
            }
            
            .button1 {
           background-color: #4CAF50; 
            
            
            }
            
            .button2 {background-color: #f44336;} 
            </style>
            <body>
            <!-- required fields -->
                
                <div id="main">
                    <!-- TSALEM - reference nokia singleCRM logo -->
                      <apex:image id="Nokia_HeaderLogo" value="{!$Label.HeaderLogo}" width="50%" height="15%"/><br/><br/>
                      <apex:outputPanel >
                       Dear <!--{​​​​!recipient.Name}​​​​--> {!relatedTo.Delegate_All_User_Names__c}​​​​,
                                                                                                                                                
                       <br/><br/> You have been identified as the {!if(relatedTo.Apttus_Approval__IsDelegate__c==true,'delegate','backup')} approver for {!relatedTo.Apttus_Approval__Current_User__r.Name}. All Approval Requests that are assigned to {!relatedTo.Apttus_Approval__Current_User__r.Name} will also be available to you. This gives you the ability to Approve/Reject or Add Comments to a request on behalf of {!relatedTo.Apttus_Approval__Current_User__r.Name}.  You will be notified by email whenever there is an approval request assigned to {!relatedTo.Apttus_Approval__Current_User__r.Name}.<br/>
                       <br/> Any in flight approval requests assigned to {!relatedTo.Apttus_Approval__Current_User__r.Name} that were still open at the time the delegate went into effect may be available for you to take an action on. Please login to your Salesforce account, navigate to the Console tab, and look under Approval Requests / My Approvals, to see if there are any available requests.<br/>                                         
                       </apex:outputPanel>
                       <br/> Please contact your regional approvals administrator if you have any questions.<br/>
                       <br>Thanks</br>
                </div>        
               
               <br/><br/>
               <div>
                   
                   <apex:image id="Nokia_FooterLogo" value="{!$Label.FooterLogo}" width="120" height="30"/>                        
               </div>
            </body>
        </html>
    </messaging:htmlEmailBody>

</messaging:emailTemplate>
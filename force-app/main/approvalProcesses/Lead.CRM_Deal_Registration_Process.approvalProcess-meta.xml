        <name>Deal_validation</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>Account_Manager_Rejected_Date_Update</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Account_Manager_Status_Rejected</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>CRM_Partner_Deal_Rejected</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Deal_Registration_Rejection_Email_for_PSM</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Deal_Rejected</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Account_Manager_Date_Update_DOD</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Account_Manager_Status_Approved_DOD</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Approval_Status_Approved</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>Direct_Sales_Approver__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Lead.Status</field>
                <operation>equals</operation>
                <value>In Progress</value>
            </criteriaItems>
            <criteriaItems>
                <field>Lead.PRMDOD_Requested__c</field>
                <operation>equals</operation>
                <value>True</value>
            </criteriaItems>
            <criteriaItems>
                <field>Lead.Bus_Ops_Approver__c</field>
                <operation>notEqual</operation>
            </criteriaItems>
            <criteriaItems>
                <field>Lead.Direct_Sales_Approver__c</field>
                <operation>notEqual</operation>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>

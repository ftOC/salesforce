        <name>Approval_From_Account_Manager_with_DOD</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>Account_Manager_Rejected_Date_Update_DO</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Account_Manager_Status_Rejected_DOD</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>CRM_Partner_Deal_Rejected</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Deal_Registration_Rejection_Email_for_PSM</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Lead_Status_Rejected</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Bus_Ops_Approval_Date_Update</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Field_Update_for_Business_Ops_Approver</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Update_Lead_Status</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>With_DOD_Approval_By_business</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>Bus_Ops_Approver__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Lead.PRMDOD_Requested__c</field>
                <operation>equals</operation>
                <value>True</value>
            </criteriaItems>
            <criteriaItems>
                <field>Lead.Direct_Sales_Approval_Status__c</field>
                <operation>equals</operation>
                <value>Approved</value>
            </criteriaItems>
            <criteriaItems>
                <field>Lead.Bus_Ops_Approver__c</field>
                <operation>notEqual</operation>
            </criteriaItems>
        </entryCriteria>
        <label>Approval by Business Op Approver</label>
        <name>Approval_by_Business_Op_Approver</name>

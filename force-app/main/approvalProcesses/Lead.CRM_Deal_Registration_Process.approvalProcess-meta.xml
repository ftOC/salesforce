<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>Global</submitter>
        <type>roleSubordinatesInternal</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>Lead_Detail__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Lead_Status_In_Progress</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>PSM_Approval_Date</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>PSM_Field_Status</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>PSM_User_Update</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>Partner_Sales_Manager__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Lead.Status</field>
                <operation>equals</operation>
                <value>Pending Approval,Rejected</value>
            </criteriaItems>
            <criteriaItems>
                <field>Lead.Partner_Sales_Manager__c</field>
                <operation>notEqual</operation>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Initial Approver</label>
        <name>Initial_Approver</name>
        <rejectionActions>
            <action>
                <name>CRM_Partner_Deal_Rejected</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Deal_Registration_Rejection_Email_for_PSM</name>
                <type>Alert</type>
            </action>
            <action>
                <name>PSM_Approval_User_rejects</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>PSM_Lead_Rejection</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>PSM_reject_Status</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>PSM_status_Date</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Account_Manager_Date_Update</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Account_Manager_Status_Approved</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Approval_Status_Approved</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Field_Update_to_approved</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>Direct_Sales_Approver__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Lead.PRMDOD_Requested__c</field>
                <operation>equals</operation>
                <value>False</value>
            </criteriaItems>
            <criteriaItems>
                <field>Lead.Status</field>
                <operation>equals</operation>
                <value>In Progress</value>
            </criteriaItems>
            <criteriaItems>
                <field>Lead.Direct_Sales_Approver__c</field>
                <operation>notEqual</operation>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>

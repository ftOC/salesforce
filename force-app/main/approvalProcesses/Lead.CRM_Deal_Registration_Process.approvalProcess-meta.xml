            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>Approval_Update_For_PSM</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Date_Update_For_Business_Op</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Field_Update_Rejection_by_Business_Ops</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Lead_Approved_For_Lead_Owner</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Rejection_without_DOD</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Without_Dod_approved</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <description>Deal Approval Process</description>
    <emailTemplate>SFCCLtngPtr__DealRegistrations/Initial_Approval</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Lead.RecordType</field>
            <operation>equals</operation>
            <value>Distributor Deal Registration,Indirect Deal Registration,Reseller Deal Registration</value>
        </criteriaItems>
        <criteriaItems>
            <field>Lead.Status</field>
            <operation>notEqual</operation>
            <value>Approved</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Approval_Update_For_PSM</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Lead_Approved_For_Lead_Owner</name>
            <type>Alert</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Approval_Status_Rejected</name>

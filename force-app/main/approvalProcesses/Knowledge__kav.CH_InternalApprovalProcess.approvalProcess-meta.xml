<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>CH_Workgroup_Authors</submitter>
        <type>group</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Title</field>
        <field>ArticleNumber</field>
        <field>ArticleType</field>
        <field>CH_Candidate_for_External__c</field>
        <field>Priority__c</field>
        <field>PublishStatus</field>
        <field>ValidationStatus</field>
        <field>CH_Reviewer__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>CH_Set_Coming_From_Approval_Process</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>CH_Internal_Approver</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>When article is minor change and no need of external review article will be approved by internal approver</description>
        <entryCriteria>
            <criteriaItems>
                <field>Knowledge__kav.CH_Minor_changes__c</field>
                <operation>equals</operation>
                <value>True</value>
            </criteriaItems>
            <criteriaItems>
                <field>Knowledge__kav.CH_Candidate_for_External__c</field>
                <operation>equals</operation>
                <value>False</value>
            </criteriaItems>
            <criteriaItems>
                <field>Knowledge__kav.CH_ComingFromApprovalProcess__c</field>
                <operation>equals</operation>
                <value>False</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Minor Changes With Internal Approver</label>
        <name>CH_Minor_Changes_With_Internal_Approver</name>
        <rejectionActions>
            <action>
                <name>CH_Set_Status_to_Work_In_Progress</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>CH_Set_Coming_From_Approval_Process</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>CH_Internal_Approver</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>When article is major change and no need of external review article will be approved by internal approver</description>
        <entryCriteria>
            <criteriaItems>
                <field>Knowledge__kav.CH_Minor_changes__c</field>
                <operation>equals</operation>
                <value>False</value>
            </criteriaItems>
            <criteriaItems>
                <field>Knowledge__kav.CH_Candidate_for_External__c</field>
                <operation>equals</operation>
                <value>False</value>
            </criteriaItems>
            <criteriaItems>
                <field>Knowledge__kav.CH_ComingFromApprovalProcess__c</field>
                <operation>equals</operation>
                <value>False</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Major Changes With Internal Approver</label>
        <name>CH_Major_Changes_With_Internal_Approver</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>CH_Set_Status_to_Work_In_Progress</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>CH_Set_Coming_From_Approval_Process</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>CH_Internal_Approver</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>When article is minor change and need of external review article will be approved by internal approver and it will go to external approver</description>
        <entryCriteria>
            <criteriaItems>
                <field>Knowledge__kav.CH_Minor_changes__c</field>
                <operation>equals</operation>
                <value>True</value>
            </criteriaItems>
            <criteriaItems>
                <field>Knowledge__kav.CH_Candidate_for_External__c</field>
                <operation>equals</operation>
                <value>True</value>
            </criteriaItems>
            <criteriaItems>
                <field>Knowledge__kav.CH_ComingFromApprovalProcess__c</field>
                <operation>equals</operation>
                <value>False</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Minor Changes With External Approver</label>
        <name>CH_Minor_Changes_With_External_Approver</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>CH_Set_Status_to_Work_In_Progress</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>CH_Set_Coming_From_Approval_Process</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>CH_Internal_Approver</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>When article is major change and need of external review article will be approved by internal approver and it will go to external approver</description>
        <entryCriteria>
            <criteriaItems>
                <field>Knowledge__kav.CH_Minor_changes__c</field>
                <operation>equals</operation>
                <value>False</value>
            </criteriaItems>
            <criteriaItems>
                <field>Knowledge__kav.CH_Candidate_for_External__c</field>
                <operation>equals</operation>
                <value>True</value>
            </criteriaItems>
            <criteriaItems>
                <field>Knowledge__kav.CH_ComingFromApprovalProcess__c</field>
                <operation>equals</operation>
                <value>False</value>
            </criteriaItems>
        </entryCriteria>
        <label>Major Changes With External Approver</label>
        <name>CH_Major_Changes_With_External_Approver</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>CH_Set_Status_to_Work_In_Progress</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <description>Approval Process Related To Internal Users</description>
    <emailTemplate>CH_EmailTemplates/CH_KnowledgeApprovalNotification</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>1 AND 2 AND (3 OR 4 OR 5 OR 6)</booleanFilter>
        <criteriaItems>
            <field>Knowledge__kav.PublishStatus</field>
            <operation>equals</operation>
            <value>Draft</value>
        </criteriaItems>
        <criteriaItems>
            <field>Knowledge__kav.ValidationStatus</field>
            <operation>equals</operation>
            <value>Work In Progress</value>
        </criteriaItems>
        <criteriaItems>
            <field>Knowledge__kav.RecordType</field>
            <operation>equals</operation>
            <value>How To</value>
        </criteriaItems>
        <criteriaItems>
            <field>Knowledge__kav.RecordType</field>
            <operation>equals</operation>
            <value>Resolution</value>
        </criteriaItems>
        <criteriaItems>
            <field>Knowledge__kav.RecordType</field>
            <operation>equals</operation>
            <value>Q&amp;A</value>
        </criteriaItems>
        <criteriaItems>
            <field>Knowledge__kav.RecordType</field>
            <operation>equals</operation>
            <value>Known Error</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>CH_Set_Approver_to_CurrentUser</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>CH_Set_Reviewer_to_Null</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>CH_Set_Status_to_Internal_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>CH_Set_Reviewer_to_Null</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>CH_Capture_Version_Creator</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>CH_Set_Approver_to_Null</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>CH_Set_Publisher_to_Null</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>CH_Set_Status_to_Needs_Approver_Review</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Internal Approval Process</label>
    <processOrder>1</processOrder>
    <recallActions>
        <action>
            <name>CH_Set_Status_to_Work_In_Progress</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>

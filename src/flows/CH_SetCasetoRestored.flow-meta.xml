<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>49.0</apiVersion>
    <description>This Flow is used when an user needs to set a case directly to restored while on the phone with the customer. This flow is only shown on Nokia Incident with Restoration and only for status Pending In Progress</description>
    <formulas>
        <name>CH_DateNow</name>
        <dataType>DateTime</dataType>
        <expression>NOW()</expression>
    </formulas>
    <interviewLabel>CH_SetCasetoRestored {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Restore Case</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>Flow</processType>
    <recordLookups>
        <name>CH_LookupCase</name>
        <label>CH_LookupCase</label>
        <locationX>503</locationX>
        <locationY>126</locationY>
        <assignNullValuesIfNoRecordsFound>false</assignNullValuesIfNoRecordsFound>
        <connector>
            <targetReference>CH_Screen_SetIncidenttoRestored</targetReference>
        </connector>
        <faultConnector>
            <targetReference>Error_Message</targetReference>
        </faultConnector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>Id</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>recordId</elementReference>
            </value>
        </filters>
        <object>Case</object>
        <outputReference>CH_StoreCaseValues</outputReference>
        <queriedFields>Status</queriedFields>
        <queriedFields>CaseNumber</queriedFields>
    </recordLookups>
    <recordUpdates>
        <name>CH_ChangeStatusandMilestoneStamps</name>
        <label>CH_ChangeStatusandMilestoneStamps</label>
        <locationX>772</locationX>
        <locationY>267</locationY>
        <faultConnector>
            <targetReference>Error_Message</targetReference>
        </faultConnector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>Id</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>recordId</elementReference>
            </value>
        </filters>
        <inputAssignments>
            <field>CH_IsCompleteRestore__c</field>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>CH_OutageEndDate__c</field>
            <value>
                <elementReference>CH_DateNow</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>CH_SystemRestored__c</field>
            <value>
                <elementReference>CH_DateNow</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>Status</field>
            <value>
                <stringValue>Restoration Provided</stringValue>
            </value>
        </inputAssignments>
        <object>Case</object>
    </recordUpdates>
    <screens>
        <name>CH_Screen_SetIncidenttoRestored</name>
        <label>Set Incident to Restored</label>
        <locationX>769</locationX>
        <locationY>38</locationY>
        <allowBack>false</allowBack>
        <allowFinish>true</allowFinish>
        <allowPause>false</allowPause>
        <connector>
            <targetReference>CH_ChangeStatusandMilestoneStamps</targetReference>
        </connector>
        <fields>
            <name>CH_Screen_SetIncidentToRestore</name>
            <fieldText>Click next to restore this case</fieldText>
            <fieldType>DisplayText</fieldType>
        </fields>
        <showFooter>true</showFooter>
        <showHeader>false</showHeader>
    </screens>
    <screens>
        <name>Error_Message</name>
        <label>Error Message</label>
        <locationX>187</locationX>
        <locationY>513</locationY>
        <allowBack>false</allowBack>
        <allowFinish>true</allowFinish>
        <allowPause>false</allowPause>
        <fields>
            <name>Error</name>
            <fieldText>{!$Flow.FaultMessage}</fieldText>
            <fieldType>DisplayText</fieldType>
        </fields>
        <showFooter>true</showFooter>
        <showHeader>true</showHeader>
    </screens>
    <startElementReference>CH_LookupCase</startElementReference>
    <status>Active</status>
    <variables>
        <name>CH_StoreCaseValues</name>
        <dataType>SObject</dataType>
        <isCollection>false</isCollection>
        <isInput>false</isInput>
        <isOutput>true</isOutput>
        <objectType>Case</objectType>
    </variables>
    <variables>
        <name>recordId</name>
        <dataType>String</dataType>
        <isCollection>false</isCollection>
        <isInput>true</isInput>
        <isOutput>true</isOutput>
    </variables>
</Flow>

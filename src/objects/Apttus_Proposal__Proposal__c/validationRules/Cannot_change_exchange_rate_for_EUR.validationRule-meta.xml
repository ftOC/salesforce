<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Cannot_change_exchange_rate_for_EUR</fullName>
    <active>true</active>
    <description>For Direct Quotes, exchange rate can&apos;t be changed if Currency = EUR</description>
    <errorConditionFormula>ISCHANGED(Exchange_Rate__c) &amp;&amp; Quote_Type__c = $Label.DirectCPQ &amp;&amp; ISPICKVAL(CurrencyIsoCode , &apos;EUR&apos; )</errorConditionFormula>
    <errorDisplayField>Exchange_Rate__c</errorDisplayField>
    <errorMessage>Exchange Rate can&apos;t be changed if currency is EURO</errorMessage>
</ValidationRule>

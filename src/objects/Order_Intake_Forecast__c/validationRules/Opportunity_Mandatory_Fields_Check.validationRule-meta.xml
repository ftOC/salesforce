<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Opportunity_Mandatory_Fields_Check</fullName>
    <active>true</active>
    <errorConditionFormula>AND(AND(
($Profile.Name &lt;&gt; $Label.Data_Loader_Profile_Name),
($Profile.Name &lt;&gt; $Label.System_Admin_Profile),
( $Profile.Name &lt;&gt; $Label.Integration_Profile )
) ,ISBLANK(TEXT(Opportunity__r.Contract_Signing_Entity__c)))</errorConditionFormula>
    <errorMessage>Opportunity mandatory fields must be populated</errorMessage>
</ValidationRule>

<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Reject_Comments_Required_when_Rejected</fullName>
    <active>false</active>
    <errorConditionFormula>AND(ISPICKVAL(Status__c,&quot;Rejected&quot;),ISBLANK(  Reject_Comments__c ))</errorConditionFormula>
    <errorDisplayField>Reject_Comments__c</errorDisplayField>
    <errorMessage>Reject comments cannot be blank if a defect is Rejected</errorMessage>
</ValidationRule>

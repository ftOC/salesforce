<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Product_Validation_rule</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
$Profile.Name&lt;&gt;$Label.Data_Loader_Profile_Name,
ISBLANK(NCP_Product_Id__c))</errorConditionFormula>
    <errorDisplayField>NCP_Product_Id__c</errorDisplayField>
    <errorMessage>Please select a Product !</errorMessage>
</ValidationRule>

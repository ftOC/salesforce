<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Cannot_update_product</fullName>
    <active>true</active>
    <errorConditionFormula>AND(NOT(ISNEW()), (PRIORVALUE( BusinessLine__c)&lt;&gt;  BusinessLine__c ),ISPICKVAL(Deal__r.Status, &apos;Closed - Converted (Qualified)&apos;))</errorConditionFormula>
    <errorMessage>You cannot update product once deal is approved</errorMessage>
</ValidationRule>

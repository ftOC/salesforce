<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Product_cant_be_added_after_Approval</fullName>
    <active>true</active>
    <errorConditionFormula>OR(ISPICKVAL(Deal__r.Status, &apos;Pending Approval&apos;),ISPICKVAL(Deal__r.Status, &apos;Approved&apos;),ISPICKVAL(Deal__r.Status, &apos;In Progress&apos;))</errorConditionFormula>
    <errorMessage>You Can&apos;t add a Product after your deal is In Progress Or Approved Or Pending Approval .!</errorMessage>
</ValidationRule>

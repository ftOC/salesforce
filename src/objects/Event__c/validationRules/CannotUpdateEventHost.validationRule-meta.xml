<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>CannotUpdateEventHost</fullName>
    <active>false</active>
    <errorConditionFormula>AND(
NOT(ISBLANK(PRIORVALUE(Event_Host__c))), 
ISCHANGED(Event_Host__c),
NOT(ISNEW())
)</errorConditionFormula>
    <errorDisplayField>Event_Host__c</errorDisplayField>
    <errorMessage>You cannot update the Event Host this Event.</errorMessage>
</ValidationRule>

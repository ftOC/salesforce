<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>validation_on_convert_and_reject_state</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
ISCHANGED(Upsell_Status__c) ,
NOT(ISPICKVAL(PRIORVALUE(Upsell_Status__c),&quot;Ready To Convert&quot;)), ISPICKVAL(Upsell_Status__c,&quot;Convert&quot;))</errorConditionFormula>
    <errorMessage>Proposal must be in &quot;Ready To Convert&quot; state before conversion.</errorMessage>
</ValidationRule>

<apex:page controller="highspot.ConfigurationController" id="hs_cc" standardStylesheets="false">
<div id="hs_cc_wrapper">
  <apex:stylesheet value="{!URLFOR($Resource.highspot__hs_resource, 'hs_salesforce.css')}" />
  
  <div class="hs_bPageTitle">
    <div class="hs_ptBody">
      <div class="hs_content">
        <apex:image url="{!URLFOR($Resource.highspot__hs_resource, 'highspot_badge@2x.png')}" title="Highspot" styleClass="hs_pageTitleIcon" />
        <h1 class="hs_pageType">Configuration<span class="titleSeparatingColon">:</span></h1>
        <h2 class="hs_pageDescription"> Highspot</h2>
        <div class="hs_blank">&nbsp;</div>
      </div>
      <div class="hs_links">
        <a href="http://help.highspot.com/entries/52166040-SalesForce-integration" target="_blank" title="Help for this Page (New Window)"><span class="hs_helpLink">Help for this Page</span><img src="/s.gif" alt="" class="hs_helpIcon" /></a>
      </div>
      <div class="hs_blank">&nbsp;</div>
    </div>
  </div>

 <apex:form id="hs_cf">
   <apex:actionFunction action="{!syncChanges}" name="syncChanges" status="syncStatus" rerender="status, lastSync" immediate="true" />
   <apex:actionFunction action="{!toggleApi}" name="toggleApi" rerender="inputs, status" immediate="true" />
   <apex:actionFunction action="{!saveChanges}" name="saveChanges" status="busyStatus" rerender="inputs, status, lastSync" immediate="false" />

    <div class="hs_bRelatedList">
      <div class="hs_hotListElement">
        <div class="hs_bPageBlock hs_brandSecondaryBrd hs_secondaryPalette">
          <div class="hs_pbHeader">

            <table border="0" cellpadding="0" cellspacing="0">
              <tbody>
                <tr>
                  <td class="hs_pbTitle"><h3>Sync Status</h3></td>
                  <td class="hs_pbButton">
                    <input type="button" class="hs_btn" value=" Sync to Highspot " title="Sync to Highspot" onclick="syncChanges()" />
                    &nbsp;
                    <apex:actionStatus id="syncStatus">
                      <apex:facet name="start">
                        <img src="https://www.highspot.com/img/ajax-loader.gif" width="16" height="16" title="Syncing..." />
                      </apex:facet>
                    </apex:actionStatus>
                  </td>
                </tr>
                <tr>
                  <td colspan="2" align="left">
                    <apex:outputText id="lastSync" value="{!lastSync}" style="font-style:italic; padding-left: 9px;" ></apex:outputText>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

    <div class="hs_bRelatedList">
      <div class="hs_hotListElement">
        <div class="hs_bPageBlock hs_brandSecondaryBrd hs_secondaryPalette">
          <div class="hs_pbHeader">

            <table border="0" cellpadding="0" cellspacing="0">
              <tbody>
                <tr>
                  <td class="hs_pbTitle"><h3>Highspot API Settings</h3></td>
                  <td class="hs_pbButton">
                    <input type="button" class="hs_btn" value=" Save Changes " title="Save Changes" onclick="saveChanges()" />
                    <!-- onclick="saveChanges(document.getElementById('hs_cc:hs_cf:api_url').value, document.getElementById('hs_cc:hs_cf:api_user').value,document.getElementById('hs_cc:hs_cf:api_key').value)" / -->
                    &nbsp;
                    <apex:actionStatus id="busyStatus">
                      <apex:facet name="start">
                        <img src="https://www.highspot.com/img/ajax-loader.gif" width="16" height="16" title="Saving changes..." />
                      </apex:facet>
                    </apex:actionStatus>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>

          <div class="hs_pbBody" id="inputs">
            <div>
              <div class="hs_left">Enable API</div>
              <div class="hs_right"><apex:inputCheckbox value="{!apiEnabled}" onchange="toggleApi()" /></div>
            </div>
            <div>
              <div class="hs_left">API URL</div>
              <div class="hs_right"><apex:inputText id="api_url" value="{!apiUrl}" /></div>
            </div>
            <div>
              <div class="hs_left">API User</div>
              <div class="hs_right"><apex:inputText id="api_user" value="{!apiUser}" maxlength="128" /></div>
            </div>
            <div>
              <div class="hs_left">API Secret</div>
              <div class="hs_right"><apex:inputSecret id="api_key" value="{!apiKey}" redisplay="true" maxlength="128" /></div>
            </div>
          </div>
          <div class="hs_pbFooter hs_secondaryPalette">
            <apex:pageMessages />
            <div class="hs_bg"></div>
          </div>
        </div>
      </div>
    </div>
  </apex:form>

  <apex:outputPanel id="status" style="margin-top:12px;" layout="block">
    <apex:pageMessage summary="{!statusMessage}" severity="error" rendered="{!apiStatus > 200}" strength="1" />
    <apex:pageMessage summary="{!statusMessage}" severity="warning" rendered="{!apiStatus < 200}" strength="1" />
    <apex:pageMessage summary="{!statusMessage}" severity="confirm" rendered="{!apiStatus == 200}" strength="1" />
    <!-- apex:outputLabel>{!apiStatus}</apex:outputLabel -->
  </apex:outputPanel>

</div>
</apex:page>
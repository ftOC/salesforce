<messaging:emailTemplate subject="{!$Label.apttus_approval__approvalrequestforopportunity} '{!relatedTo.Apttus_Approval__Related_Opportunity__r.Name}' {!$Label.apttus_approval__hasbeencancelled}" 
                         recipientType="User" 
                         relatedToType="Apttus_Approval__Approval_Request__c"
                         language="{!recipient.LanguageLocaleKey}"
                         replyTo="{!$Label.NF_EmailServiceReplyTo}"
                         >
                         
    <messaging:htmlEmailBody >
        <html>
            <body>
                
                  <!-- required fields -->
                    <apex:outputtext style="width:2px;height:2px; color:white;" escape="false" value="

                    {!$Label.apttus_approval__approvalrequestid}: {!relatedTo.Id}<br/>
                    {!$Label.apttus_approval__approvaluserid}: {!relatedTo.OwnerId}<br/> 
                    {!$Label.apttus_approval__approvalrequest} {!$ObjectType.Apttus_Approval__Approval_Request__c.Fields.Apttus_Approval__Assigned_To_Name__c.Label}: {!relatedTo.Apttus_Approval__Assigned_To_Name__c}"/>
                <!-- <apex:image id="Nokia_HeaderLogo" value="{!$Label.HeaderLogo}" width="50%" height="25%"/><br/><br/>-->
 
                 <br/><br/>              
                 
                Dear {!recipient.Name}:
                <br/><br/>
                <apex:outputText value="{!$Label.apttus_approval__approvalactionlinkfordelegate & ' ' & relatedTo.Apttus_Approval__Assigned_To_Name__c & '.'}" 
                                 escape="true" 
                                 rendered="{!relatedTo.Apttus_Approval__HasDelegateApprover__c &&
                                            (recipient.Name == relatedTo.Apttus_Approval__DelegateApprover__r.Name)}" />
                {!$Label.apttus_approval__approvalrequestforopportunity} '{!relatedTo.Apttus_Approval__Related_Opportunity__r.Name}' {!$Label.apttus_approval__hasbeencancelled}.
                <br/><br/>
                <!--<Apttus_Approval:OpptyApprovalEmail ApprovalRequestSO="{!relatedTo}" ApprovalRecipientSO="{!recipient}" />-->
                <c:NF_EmailTtemplateAttachements objectId="{!relatedTo.Apttus_Approval__Related_Opportunity__c}" relatedToReq="{!relatedTo}"></c:NF_EmailTtemplateAttachements>
                <br/>
    
            </body>
        </html>
    </messaging:htmlEmailBody>
</messaging:emailTemplate>
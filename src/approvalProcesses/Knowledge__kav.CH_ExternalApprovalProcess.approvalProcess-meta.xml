<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Title</field>
        <field>ArticleNumber</field>
        <field>CH_Candidate_for_External__c</field>
        <field>CH_Minor_changes__c</field>
        <field>CH_Publisher__c</field>
        <field>ValidationStatus</field>
        <field>CH_Reviewer__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>CH_Set_Coming_From_Approval_Process</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>CH_Set_Customer_to_True</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>CH_Set_Reviewer_to_Null</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>CH_Set_Status_to_External_Approved</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>CH_External_Approver</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>When article is minor change and external check article will be approved by external approver</description>
        <entryCriteria>
            <criteriaItems>
                <field>Knowledge__kav.CH_Minor_changes__c</field>
                <operation>equals</operation>
                <value>True</value>
            </criteriaItems>
            <criteriaItems>
                <field>Knowledge__kav.CH_ComingFromApprovalProcess__c</field>
                <operation>equals</operation>
                <value>False</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Minor Changes With External Approver</label>
        <name>CH_Minor_Changes_With_External_Approver</name>
        <rejectionActions>
            <action>
                <name>CH_Deselect_Candidate_For_External</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>CH_Set_Customer_to_False</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>CH_Set_Status_to_Internal_Approved</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>CH_Set_Coming_From_Approval_Process</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>CH_Set_Customer_to_True</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>CH_Set_Reviewer_to_Null</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>CH_Set_Status_to_External_Approved</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>CH_External_Approver</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>When article is major change and external check article will be approved by external approver</description>
        <entryCriteria>
            <criteriaItems>
                <field>Knowledge__kav.CH_Minor_changes__c</field>
                <operation>equals</operation>
                <value>False</value>
            </criteriaItems>
            <criteriaItems>
                <field>Knowledge__kav.CH_ComingFromApprovalProcess__c</field>
                <operation>equals</operation>
                <value>False</value>
            </criteriaItems>
        </entryCriteria>
        <label>Major Changes With External Approver</label>
        <name>CH_Major_Changes_With_External_Approver</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>CH_Deselect_Candidate_For_External</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>CH_Set_Customer_to_False</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>CH_Set_Status_to_Internal_Approved</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <description>Approval Process Related to External Users</description>
    <emailTemplate>CH_EmailTemplates/CH_KnowledgeApprovalNotification</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>1 AND 2 AND 3 AND (4 OR 5 OR 6 OR 7)</booleanFilter>
        <criteriaItems>
            <field>Knowledge__kav.ValidationStatus</field>
            <operation>equals</operation>
            <value>Internal Approved</value>
        </criteriaItems>
        <criteriaItems>
            <field>Knowledge__kav.CH_Candidate_for_External__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <criteriaItems>
            <field>Knowledge__kav.PublishStatus</field>
            <operation>equals</operation>
            <value>Draft</value>
        </criteriaItems>
        <criteriaItems>
            <field>Knowledge__kav.RecordType</field>
            <operation>equals</operation>
            <value>How To</value>
        </criteriaItems>
        <criteriaItems>
            <field>Knowledge__kav.RecordType</field>
            <operation>equals</operation>
            <value>Resolution</value>
        </criteriaItems>
        <criteriaItems>
            <field>Knowledge__kav.RecordType</field>
            <operation>equals</operation>
            <value>Q&amp;A</value>
        </criteriaItems>
        <criteriaItems>
            <field>Knowledge__kav.RecordType</field>
            <operation>equals</operation>
            <value>Known Error</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>CH_Set_Publisher_to_CurrentUser</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>CH_Set_Reviewer_to_Null</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>CH_Set_Coming_From_Approval_Process</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>CH_Set_Reviewer_to_Null</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>CH_DeselectComingfromApprovalProcess</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>CH_Set_Reviewer_to_Null</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>CH_Set_Status_to_Needs_Publisher_Review</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>External Approval Process</label>
    <processOrder>1</processOrder>
    <recallActions>
        <action>
            <name>CH_Set_Status_to_Internal_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
